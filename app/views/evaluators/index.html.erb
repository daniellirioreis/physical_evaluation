<table class="table">
  <td><h3>Listagem de Avaliadores</h3></td>
  <td width='5%'>
    <%= link_to new_evaluator_path, role: 'button' do %>
      <h2 class="text-success" title='Novo Avaliador'><i class="icon-plus"></i></h2>
    <% end %>    
  </td>
</table>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>CPF</th>
      <th>Telefone</th>
      <th colspan="3" width="5%"></th>
    </tr>
  </thead>

  <tbody>
    <% @evaluators.each do |evaluator| %>
      <tr>
        <td><%= evaluator.name %></td>
        <td><%= evaluator.email %></td>
        <td><%= evaluator.cpf %></td>
        <td><%= evaluator.phone %></td>
        <td>
          <%= link_to edit_evaluator_path(evaluator), role: 'button' do %>
            <h3 title="Editar"><i class="icon-pencil"></i></h3>
          <% end %>
        </td>
        <td>
          <%= link_to evaluator, method: :delete, data:{confirm: 'Confirma exclusão ?'}, role: 'button' do %>
            <h3 title="Apagar"><i class="icon-trash"></i></h3>
          <% end %>              
        </td>
        <td>
          <%= link_to evaluator, role: 'button' do %>
            <h3 title="Informações"><i class="icon-info"></i></h3>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>