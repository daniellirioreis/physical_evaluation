<table class="table">
  <td><h3>Listagem de pacotes</h3></td>
  <td width='5%'>
    <%= link_to new_package_path, role: 'button' do %>
      <h2 class="text-success" title='Novo Avaliador'><i class="icon-plus"></i></h2>
    <% end %>    
  </td>
</table>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Valor</th>
      <th colspan="3" width="5%"></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.sorted.each do |package| %>
      <tr>
        <td><%= package.name %></td>
        <td><%= package.description %></td>
        <td><%= number_to_currency(package.price, precision: 2) %></td>
				<td>
          <%= link_to edit_package_path(package), role: 'button' do %>
            <h5 title="Editar"><i class="icon-pencil"></i></h5>
          <% end %>
        </td>
        <td>
	        <%= link_to package, role: 'button' do %>
	          <h5 title="Informações"><i class="icon-info"></i></h5>
	        <% end %>	
        </td>
        <td>
          <%= link_to package, method: :delete, data:{confirm: 'Confirma exclusão ?'}, role: 'button' do %>
            <h5 title="Apagar"><i class="icon-trash"></i></h5>
          <% end %>              
        </td>
      </tr>
    <% end %>
  </tbody>
</table>