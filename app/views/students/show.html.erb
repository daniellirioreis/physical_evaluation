<h3 align="center"> Ficha do Aluno</h3>
<fieldset>
  <legend>Geral</legend>
  <p>
    <strong>Nome:</strong>
    <%= @student.name %><br>
    <strong>Data de Nascimento:</strong> <%= l @student.birth_date%>
  </p>
</fieldset>

<fieldset>
  <legend>Endereço</legend>
  <%= @student.address%>
</fieldset>

<fieldset>
  <legend>Contatos</legend>
  <p>
    <strong>Email:</strong>
    <%= @student.email %>
  </p>
  <p>
    <strong>Telefone:</strong>
    <%= @student.phone %>
  </p>
  <p>
    <strong>Celular:</strong>
    <%= @student.cell_phone %>
  </p>
  <p>
    <strong>Idade:</strong><%= @student.age[:ano]%>
  </p>
</fieldset>
<fieldset>
  <legend>Treinos</legend>
  
  <table class="table">
    <tr>
      <th>
        Data
      </th>
      <th>
        Exercícios
      </th>
    </tr>
    <% @student.trainings.each do |t|%>
      <tr>
        <td>
          <%= t.name %><br>
          <%= l t.date_start %> à <%= l t.date_end %>
        </td>
        <td>
          <% t.exercise_trainings.each do |e|%>
            <strong>Exercicio:</strong> <%= e %> <strong>N° Repetições: </strong><%= e.repetitions%> <strong>Esforço:</strong> <%= e.effort%>
            <hr>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>

</fieldset>
<br>
<div class="form-action">
  <%= link_to 'Editar', edit_student_path(@student), class: 'btn btn-primary' %>
  <%= link_to 'Voltar', students_path, class: :btn %>
</div>
