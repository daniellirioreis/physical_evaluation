<table class="table">
  <thead>
    <th>Data Início</th>
		<th> Dia da Semana</th>
    <th>Descrição</th>
		<th></th>
  </thead>
  <% @trainings.each do |t| %>
    <tr>
      <td><%= l t.date_start unless t.date_start.nil? %></td>
			<td> <%= t.string_week_day %></td>
      <td><%= t.name%></td>
			<td>
				<a class="btn btn-primary" role="button" data-toggle="collapse" href="#exercise_trainings_<%= t.id%>" aria-expanded="false" aria-controls="collapseExample">
				  Exercícios
				</a>
			</td>
     </tr>
		 <tr>
				<td colspan= "5">					
					<div class="collapse" id="exercise_trainings_<%= t.id %>">
					  <div class="well">
							<table class="table table-striped table-bordered">
								<tr>
									<th>
										Nome
									</th>
									<th width= "20%">
										Músculo
									</th>															
									<th width= "20%">
										Grupo Muscular
									</th>									
									<th width= "5%">
										Series
									</th>						
									<th width= "11%">
										Nº Repetições
									</th>
									<th width= "5%">
										Carga
									</th>
									<th width= "5%">
										Descanso
									</th>									
								</tr>
								<% t.exercise_trainings.each do |t| %>
						    	<tr>
										<td>
											<%= t %>
										</td>
										<td>
											<%= t.musculo %>
										</td>										
										<td>
											<%= t.grupo_muscular %>
										</td>																				
										<td>
											<%= t.series %>
										</td>									
										<td>
											<%= t.repetitions%>
										</td>
										<td>
											<%= t.effort%>
										</td>
										<td>
											<%= t.descanso%>
										</td>										
									</tr>
						    <% end %>
							</table>
					  </div>
					</div>
				</td>
		 </tr>
  <% end %>
</table>	