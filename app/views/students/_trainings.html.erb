<table class="table">
  <thead>
    <th>Data Início</th>
		<th> Dia da Semana</th>
    <th>Aluno</th>
    <th>Descrição</th>
		<th></th>
  </thead>
  <% @trainings.each do |t| %>
    <tr>
      <td><%= l t.date_start unless t.date_start.nil? %></td>
			<td> <%= t.string_week_day %></td>
      <td><%= t.student %></td>
      <td><%= t.name%></td>
			<td>
				<!-- Button to trigger modal -->
				<a href="#myModal_<%=t.id%>" role="button" class="btn btn-info" data-toggle="modal">Exercícios</a>

				<!-- Modal -->
				<div id="myModal_<%= t.id%>" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
				  <div class="modal-header">
				    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
				    <h3 id="myModalLabel">Exercícios</h3>
				  </div>
				  <div class="modal-body">
							<table class="table table-striped table-bordered">
								<tr>
									<th>
										Nome
									</th>
									<th width= "5%">
										Series
									</th>						
									<th width= "5%">
										Nº Repetições
									</th>
									<th width= "5%">
										Carga
									</th>
									<th width= "5%">
										Descanso
									</th>									
								</tr>
								<% t.exercise_trainings.each do |t| %>
						    	<tr>
										<td>
											<%= t %>
										</td>
										<td>
											<%= t.series %>
										</td>									
										<td>
											<%= t.repetitions%>
										</td>
										<td>
											<%= t.effort%>
										</td>
										<td>
											<%= t.descanso%>
										</td>										
									</tr>
						    <% end %>
							</table>
				  </div>
				 </div>
			</td>
     </tr>
  <% end %>
</table>	