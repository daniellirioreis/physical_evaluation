<table class="table">
  <td>
    <h3>Listagem de Alunos</h3>
  </td>
  <td width='5%'>
    <%= link_to new_student_path, role: 'button' do %>
      <h2 class="text-success" title='Novo Aluno'><i class="icon-plus"></i></h2>
    <% end %>    
  </td>
</table>



<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Idade</th>
      <th>Endereço</th>
      <th>Telefones</th>
      <th colspan="3" width="5%"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student %></td>
        <td></td>
        <td><%= student.address %></td>
        <td><%= student.phones%></td>
        <td>
          <%= link_to edit_student_path(student), role: 'button' do %>
            <h3 title="Editar"><i class="icon-pencil"></i></h3>
          <% end %>
        </td>
        <td>
          <%= link_to student, method: :delete, data:{confirm: 'Confirma exclusão ?'}, role: 'button' do %>
            <h3 title="Apagar"><i class="icon-trash"></i></h3>
          <% end %>              
        </td>
        <td>
          <%= link_to student, role: 'button' do %>
            <h3 title="Informações"><i class="icon-info"></i></h3>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
