
<p>
  <strong>Aluno:</strong>
  <%= @training.student %>
</p>

<p>
  <strong>Nome do Treino:</strong>
  <%= @training.name %>
</p>

<p>
  <strong>Período de validade:</strong>
  <%= l @training.date_start %> à   <%= l @training.date_end %>
</p>
<p>
  <strong>Descrição:</strong>
  <%= @training.description %>
</p>
<p>
	<strong>Dia da semana:</strong>
	<%= @training.week_day_humanize%>
</p>
<p>
	<strong>Tempo de descanso entre exercícios:</strong>
	<%= @training.break_time%>
</p>

  <h4 align="center">Exercícios</h4>
	<table class="table table-striped table-bordered">
		<tr>
			<th>
				Exercício
			</th>
			<th width= "5%">
				Series
			</th>			
			<th width= "5%">
				Nº Repetições
			</th>
			<th width= "5%">
				Esforço
			</th>
		</tr>
		<% @training.exercise_trainings.each do |t| %>
    	<tr>
				<td>
					<%= t %>
				</td>
				<td>
					<%= t.series %>
				</td>				
				<td>
					<%= t.repetitions%>
				</td>
				<td>
					<%= t.effort%>
				</td>
			</tr>
    <% end %>
	</table>
	

    