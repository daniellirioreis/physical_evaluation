<%= simple_form_for(@training) do |f| %>
  <div class="row-fluid">
   <div class="span7"> <%= f.input :student_id, collection: Student.all.map{|cd|[cd.name, cd.id]}, input_html: { class: 'span7' } %></div>
  </div>
  <div class="row-fluid"> 
    <div class="span6">
      <%= f.input :name, input_html: { class: 'span7' } %>
   </div>
  </div>
  <div class="row-fluid"> 
    <div class="span4">
      <%= f.input :date_start, input_html: { class: 'span4' } %>
      <%= f.input :date_end, input_html: { class: 'span4' } %>
    </div>
  </div>
  <div class="row-fluid"> 
    <div class="span4">
      <%= f.input :description, input_html: { class: 'span12', rows: 10, cols: 10 } %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
