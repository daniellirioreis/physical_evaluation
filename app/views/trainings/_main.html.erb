<div class="row-fluid">
  <div class="span12">
    <%= f.input :student_id, as: :hidden %>
    <%= f.input :student_name, :url => autocomplete_student_name_students_path, :as => :autocomplete , :id_element => '#training_student_id', :placeholder => "Digite o nome do aluno", :multiple => false, input_html: {class:'span7'} %>
  </div>
</div>
<div class="row-fluid">
	<div class="span12">
	  <%= f.input :coach_id, as: :hidden %>
	  <%= f.input :coach_name, :url => autocomplete_coach_name_coaches_path, :as => :autocomplete , :id_element => '#training_coach_id', :placeholder => "Digite o nome do personal", :multiple => false, input_html: {class:'span7'} %>
	</div>	
</div>
  
  <div class="row-fluid"> 
    <div class="span12">
      <%= f.input :name, as: :text, input_html: { class: 'span7' } %>
   </div>
  </div>
 	<fieldset>
	<legend>Dias da semana</legend>
		<div class="row-fluid"> 
	    <div class="span1">
				<%= f.input :segunda%>	    
			</div>
			<div class="span1">
		    <%= f.input :terca%>  
			</div>    
		  <div class="span1">
				<%= f.input :quarta%>  	    
			</div>
		  <div class="span1">
				<%= f.input :quinta%>  	    
			</div>
		  <div class="span1">
				<%= f.input :sexta%>  	    
			</div>
		  <div class="span1">
				<%= f.input :sabado%>  	    
			</div>
		  <div class="span4">
				<%= f.input :domingo%>  	    
			</div>
    </div>
	</fieldset>			
	<br>
  <div class="row-fluid"> 
      <div class="span4"> <%= f.input :date_start, as: :string, input_html: { class: 'span4 date', data: {provide:'datepicker' } } %></div>
      <div class="span4"><%= f.input :date_end, as: :string, input_html: { class: 'span4 date', data: {provide:'datepicker'} } %></div>
  </div>
  
  <div class="row-fluid"> 
    <div class="span7">
      <%= f.input :description, as: :text, input_html: { class: 'span12', rows: 10, cols: 50 } %>
    </div>
  </div>
  