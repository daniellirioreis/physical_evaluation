<%= simple_form_for(@sale) do |f| %>
	<div class="row-fluid">
	  <div class="span12">
	    <%= f.input :student_id, as: :hidden %>
	    <%= f.input :student_name, :url => autocomplete_student_name_students_path, :as => :autocomplete , :id_element => '#sale_student_id', :placeholder => "Digite o nome do aluno", :multiple => false, input_html: {class:'span7'} %>
	  </div>
	</div>
	<div class="row-fluid">
	  <div class="span12">
	    <%= f.input :package_id, as: :hidden %>
	    <%= f.input :package_name, :url => autocomplete_package_name_packages_path, :as => :autocomplete , :id_element => '#sale_package_id', :placeholder => "Digite o nome do pacote", :multiple => false, input_html: {class:'span7'} %>
	  </div>
	</div>
	<div class="row-fluid">
		<div class="span2">
			<%= f.input :type_sale, collection: TypeSale , input_html: {class: 'span12'} %>
		</div>		
	</div>
	<br/>
	<div class="row-fluid div_discount <% if  @sale.new_record? || @sale.type_sale == 1 %>hidden<% end %>">
		<div class="span4 div_discount ">
			<%= f.input :discount, as: :string , input_html: {class: 'span3'}, :placeholder => "__%" %>
		</div>		
	</div>
	<div class="row-fluid div_installment  <% if  @sale.new_record? || @sale.type_sale == 0 %>hidden<% end %> ">
		<div class="span4">
			<%= f.input :installment, as: :string , input_html: {class: 'span3'}, :placeholder => "__ X" %>
		</div>				
	</div>
  
	<div class="form-actions">
		<%= f.button :submit, class: 'btn btn-success' %>
		<%= link_to 'Voltar', sales_path, class: 'btn' %>
	</div>
<% end %>