<%= simple_form_for @evaluation, :html => { :multipart => true }  do |f| %>
  <div class="tabbable">
    <ul class="nav nav-tabs">
      <li class="active"> <%= link_to "Geral", "#general", :"data-toggle" => :tab %></li>
      <li> <%= link_to "Anamnese", "#anamnese", :"data-toggle" => :tab %></li>
      <li> <%= link_to "Composição Corporal", "#compCorp", :"data-toggle" => :tab %></li>
      <li> <%= link_to "Fotos", "#fotos", :"data-toggle" => :tab %></li>
    </ul>
  </div>

  <div class="tab-content">
    <div class="tab-pane fade active in" id="general">
      <%= render "general", :f => f %>
    </div>

    <div class="tab-pane" id="anamnese">
      <%= render "anamnese", :f => f %>
    </div>

    <div class="tab-pane" id="compCorp">
      <%= render "compCorp", :f => f %>
    </div>

		<div class="tab-pane" id="fotos">
      <%= render "fotos", :f => f %>
    </div>

  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-success" %>
    <%= link_to 'Voltar', evaluations_path, :class => "btn"  %>
  </div>  
<% end %>
