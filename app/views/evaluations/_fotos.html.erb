<table class="table table-striped table-bordered">
	<tr>
		<td>
			<p class="text-center">
				Visão Frontal	
			</p>
		</td>
		<td>
			<p class="text-center">
				Visão Frontal Contraído
			</p>
		</td>		
	</tr>
	<tr>
			<td>
				<% unless @evaluation.new_record? %>
					<%= image_tag @evaluation.front_photo_url, width: '150' %>			
				<% end %>
				<%= f.file_field :front_photo, input_html:{class: 'span2'} %>		
			</td>
			<td>
				<% unless @evaluation.new_record? %>
					<%= image_tag @evaluation.front_contracted_photo_url, width: '150' %>			
				<% end %>
				<%= f.file_field :front_contracted_photo, input_html:{class: 'span2'} %>		
			</td>
	</tr>
	<tr>
		<td>
			<p class="text-center">
				Visão da Traseira
			</p>
		</td>
		<td>
			<p class="text-center">
				Visão de Costa Contraído
			</p>
		</td>		
	</tr>
	<tr>
		<td>
			<% unless @evaluation.new_record? %>
				<%= image_tag @evaluation.back_photo_url, width: '150'%>
			<% end %>
			<%= f.file_field :back_photo, input_html:{class: 'span2'} %>		
		</td>
		<td>
			<% unless @evaluation.new_record? %>
				<%= image_tag @evaluation.back_contracted_photo_url, width: '150' %>			
			<% end %>
			<%= f.file_field :back_contracted_photo, input_html:{class: 'span2'} %>				
		</td>
	</tr>
	<tr> 
		<td colspan="2">
			<p class="text-center">
				Visão de Lateral
			</p>
		</td>
	</tr>
	<tr>
		<td>
			<% unless @evaluation.new_record? %>
				<%= image_tag @evaluation.side_photo_url, width: '150'%>
			<% end %>
			<%= f.file_field :side_photo, input_html:{class: 'span2'} %>					
		</td>
	</tr>	
</table>
